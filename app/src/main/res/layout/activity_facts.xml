<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgroundb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacksonhoang.citygoer.MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <TextView
        android:id="@+id/titleFacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#80e2dddd"
        android:text="Learn Facts"
        android:textAlignment="center"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/fact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleFacts"
        android:alpha="0.8"
        android:maxLines="100"
        android:scrollbars="vertical"
        android:text="@string/fact1"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/returnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha=".50"
        android:background="@android:color/transparent"
        android:onClick="mainSelection"
        app:srcCompat="@drawable/backbutton" />


</RelativeLayout>
