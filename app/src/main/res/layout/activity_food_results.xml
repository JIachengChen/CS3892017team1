<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackgroundb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacksonhoang.citygoer.MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <ImageView
        android:id="@+id/imgfoodr"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/app_bar"
        app:srcCompat="@drawable/chinesedumplings" />

    <ImageView
        android:id="@+id/imgfoodr1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imgfoodr"
        app:srcCompat="@drawable/chinesedumplings" />

    <ImageView
        android:id="@+id/imgfoodr2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imgfoodr1"
        app:srcCompat="@drawable/chinesedumplings" />

    <ImageView
        android:id="@+id/imgfoodr3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imgfoodr2"
        app:srcCompat="@drawable/chinesedumplings" />

    <Button
        android:id="@+id/foodr"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imgfoodr"
        android:textColor="#ffaa00"
        android:text=
            "Restaurant name
            Address
            Phone#:
            Rating" />

    <Button
        android:id="@+id/foodr1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/foodr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imgfoodr1"
        android:textColor="#ffaa00"
        android:text=
            "Restaurant name
            Address
            Phone#:
            Rating" />

    <Button
        android:id="@+id/foodr2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/foodr1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imgfoodr2"
        android:textColor="#ffaa00"
        android:text=
            "Restaurant name
            Address
            Phone#:
            Rating" />

    <Button
        android:id="@+id/foodr3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/foodr2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/imgfoodr3"
        android:textColor="#ffaa00"
        android:text=
            "Restaurant name
            Address
            Phone#:
            Rating" />

    <ImageButton
        android:id="@+id/foodaddress"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imgfoodr"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/googlemapicon" />

    <ImageButton
        android:id="@+id/foodaddress1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imgfoodr1"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/googlemapicon" />

    <ImageButton
        android:id="@+id/foodaddress2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imgfoodr2"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/googlemapicon" />

    <ImageButton
        android:id="@+id/foodaddress3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imgfoodr3"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/googlemapicon" />

</RelativeLayout>
