<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacksonhoang.citygoer.MainActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <Button
        android:id="@+id/phrases"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:onClick="phraseSelection"
        android:text="Learn Mandarin"
        android:textColor="#fff"
        android:background="@drawable/translate"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/foods"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/phrases"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="foodSelection"
        android:text="Get Food"
        android:textColor="#fff"
        android:background="@drawable/food"
        android:textSize="20dp" />

    <Button
        android:id="@+id/attractions"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/foods"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="attractionSelection"
        android:text="Must-see Attractions"
        android:textColor="#fff"
        android:background="@drawable/activities"
        android:textSize="20dp" />

    <Button
        android:id="@+id/facts"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/attractions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:onClick="factsSelection"
        android:text="Fun Facts"
        android:textColor="#fff"
        android:background="@drawable/facts"
        android:textSize="20dp" />

</RelativeLayout>
